@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                <i class="fa fa-wrench" aria-hidden="true"></i>
                Update
            </button>
            <a asp-controller="Administration" asp-action="ListUsers" class="btn btn-danger">
                <i class="fa fa-times-circle-o" aria-hidden="true"></i>
                Cancel
            </a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                <ul>
                    @foreach (var role in Model.Roles)
                    {

                        <li><h5 class="card-title"> @role</h5></li>

                    }
                </ul>
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-primary" style="width:auto">Mange Role</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>User Claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                <ul>
                    @foreach (var claim in Model.Claims)
                    {
                        <li><h5 class="card-title">@claim</h5></li>
                    }
                </ul>
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id" class="btn btn-primary" style="width:auto">Mange Claim</a>
        </div>
    </div>

</form>