@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}
<h1>Edit Role</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName"></span>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type ="submit" asp-action="EditRole" class="btn btn-primary">Update</button>
            <a class="btn btn-danger" asp-controller="Administration" asp-action="ListRole">Cancel</a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h4>Users in this role</h4>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto;" asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id">Add/Remove Users</a>
        </div>
    </div>
</form>
