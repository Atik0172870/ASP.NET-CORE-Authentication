@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";

}

<div class="card-deck">

    @foreach (var item in Model)
    {

        var image = "~/images/" + (item.Photo ?? "noimage.jpg");
        <div class="card m-3" style="min-width:18rem;max-height:30.5%;">
            <div class="card-header">
                <h3>@item.Name</h3>
            </div>
            <div class="card-body">

                <a href="/Home/Details/@item.Id">
                    <img src="@image" asp-append-version="true" style="height:300px;width:300px;"  />
                </a>
            </div>
            <div class="card-footer text-center">
                <a href="/Home/Details/@item.Id" class="btn btn-primary">
                    <i class="fa fa-eye"></i>
                    View
                </a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                    <i class="fa fa-edit"></i>
                    Edit
                </a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i>
                    Delete
                </a>
            </div>
        </div>

    }
</div>

